<div class="modal fade" id="modal_add_subscription">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" ng-if="mode == 'saving'">Add a Feed Subscription</h4>
                <h4 class="modal-title" ng-if="mode == 'editing'">Edit a Feed Subscription</h4>
            </div>
            <div class="modal-body" style="padding-bottom: 0;">
                <form name="form_new_feed">
                    <div class="form-group" ng-class="{ 'has-success': form_new_feed.url.$valid && form_new_feed.url.$dirty, 'has-error': form_new_feed.url.$invalid && form_new_feed.url.$dirty }">
                        <label>RSS Feed Title</label>
                        <input type="text" class="form-control" name="url" ng-model="editing.title" ng-minlength="3" max-length="64" required />
                    </div>
                    <div class="form-group" ng-class="{ 'has-success': form_new_feed.url.$valid && form_new_feed.url.$dirty, 'has-error': form_new_feed.url.$invalid && form_new_feed.url.$dirty }">
                        <label>RSS Feed URL</label>
                        <input type="url" class="form-control" name="url" ng-model="editing.url" required />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button
                        type="button"
                        ng-if="mode == 'saving'"
                        class="btn btn-primary"
                        ng-disabled="form_new_feed.$invalid"
                        ng-click="add_subscription(editing);"
                >Add Subscription
                </button>
                <button
                        type="button"
                        ng-if="mode == 'editing'"
                        class="btn btn-primary"
                        ng-disabled="form_new_feed.$invalid"
                        ng-click="edit_sub_publisher(editing);"
                        >Save Subscription
                </button>
            </div>
        </div>
    </div>
</div>